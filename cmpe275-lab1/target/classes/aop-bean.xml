<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean name="tweetServiceImpl" class="edu.sjsu.cmpe275.aop.TweetServiceImpl">
	</bean>

	<bean name="tweetStatsImpl" class="edu.sjsu.cmpe275.aop.TweetStatsImpl">
	</bean>

	<bean name="statsAspect" class="edu.sjsu.cmpe275.aop.aspect.StatsAspect" />

	<bean id="tweetServiceImplProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="tweetServiceImpl" />
		<property name="interceptorNames">
			<list>
				<value>retryAspect</value>
			</list>
		</property>
	</bean>
	
	<bean name="retryAspect" class="edu.sjsu.cmpe275.aop.aspect.RetryAspect" />
	
	<bean id="tweetStatsImplProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="tweetStatsImpl" />
		<property name="interceptorNames">
			<list>
				<value>statsAspect</value>
			</list>
		</property>
	</bean>
</beans>